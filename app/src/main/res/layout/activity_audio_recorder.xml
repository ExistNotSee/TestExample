<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".testModel.audioRecorder.AudioRecorderActivity">
    <Button
        android:text="初始化录音程序"
        android:onClick="onInitRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="开始录音"
        android:onClick="onStartRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="结束录音"
        android:onClick="onStopRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="释放录音"
        android:onClick="onDestroyRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="播放录音文件"
        android:onClick="onPlayRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="停止播放录音文件"
        android:onClick="onStopPlayRecorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>