<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">

    <TableRow android:layout_marginBottom="@dimen/x5">

        <Button
            android:id="@+id/selectFileBtn"
            style="@style/TableLayoutBtn"
            android:layout_span="2"
            android:text="@string/selectFile" />

        <Button
            android:id="@+id/videoHistory"
            style="@style/TableLayoutBtn"
            android:layout_span="2"
            android:text="@string/videoHistory" />
    </TableRow>

    <TableRow android:layout_marginBottom="@dimen/x5">

        <Button
            android:id="@+id/playBtn"
            style="@style/TableLayoutBtn"
            android:text="@string/play" />

        <Button
            android:id="@+id/stopBtn"
            style="@style/TableLayoutBtn"
            android:text="@string/stop" />

        <Button
            android:id="@+id/goBackBtn"
            style="@style/TableLayoutBtn"
            android:text="@string/goBack" />

        <Button
            android:id="@+id/forwardBtn"
            style="@style/TableLayoutBtn"
            android:text="@string/forwar" />
    </TableRow>

    <TableRow android:layout_marginBottom="@dimen/x5">

        <Spinner
            android:id="@+id/doubleSpeedList"
            android:entries="@array/DoubleSpeed" />

        <Spinner
            android:id="@+id/functionList"
            android:entries="@array/FunctionList" />

        <Spinner
            android:id="@+id/decoderTypeList"
            android:entries="@array/DecoderType" />
    </TableRow>
</TableLayout>